<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/widget_bg_rounded_white"
    android:layout_width="280dp"
    android:layout_height="wrap_content">

    <!-- Time Row -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/time_me_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8:00 AM"
                android:textSize="14sp"
                android:textColor="#000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/time_me_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Me"
                android:textSize="12sp"
                android:textColor="#666" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_height="wrap_content"
            android:gravity="end">

            <TextView
                android:id="@+id/time_him_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8:00 AM"
                android:textSize="14sp"
                android:textColor="#000"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/time_him_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Her"
                android:textSize="12sp"
                android:textColor="#666" />
        </LinearLayout>
    </LinearLayout>

    <!-- Image and Message -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/widget_photo"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:background="@drawable/image_rounded_mask"
            android:clipToOutline="true"
            android:src="@drawable/ic_placeholder" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="8dp">

            <TextView
                android:id="@+id/message_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Message:"
                android:textSize="10sp"
                android:textColor="#000" />

            <TextView
                android:id="@+id/widget_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/chat_bubble_background"
                android:padding="8dp"
                android:text="EAT FOOD!"
                android:textColor="#000"
                android:textSize="12sp"
                android:maxLines="3"
                android:ellipsize="end" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
